{
  "name": "woocommerce-esewa",
  "title": "WooCommerce eSewa",
  "version": "1.9.0",
  "homepage": "https://gitlab.com/shivapoudel/woocommerce-esewa",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/shivapoudel/woocommerce-esewa.git"
  },
  "license": "GPL-3.0+",
  "main": "Gruntfile.js",
  "scripts": {
    "build": "grunt",
    "build-watch": "grunt watch",
    "lint:js": "eslint assets/js --ext=js",
    "git:update-hooks": "rm -rf .git/hooks && node ./node_modules/husky/husky.js install"
  },
  "devDependencies": {
    "eslint": "~5.14.0",
    "grunt": "~1.0.3",
    "grunt-checktextdomain": "~1.0.1",
    "grunt-contrib-jshint": "~2.0.0",
    "grunt-contrib-uglify": "~4.0.0",
    "grunt-contrib-watch": "~1.1.0",
    "grunt-phpcs": "~0.4.0",
    "grunt-wp-i18n": "~1.0.3",
    "husky": "1.3.1",
    "lint-staged": "8.2.1"
  },
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.php": [
        "php -d display_errors=1 -l",
        "composer run-script phpcs-pre-commit"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "*.min.js"
    ]
  }
}
